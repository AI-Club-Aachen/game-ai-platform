# Environment (development, production)
ENVIRONMENT=development

# Database Connection / PostgreSQL Container Configuration
DATABASE_URL=postgresql://postgres:your-secure-password@db:5432/gameai
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=gameai
POSTGRES_PORT=5432

# Backend Port
BACKEND_PORT=8000

# Security
JWT_SECRET_KEY=generate-with-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_HOURS=24
ALLOW_ORIGINS=["http://localhost:3000","https://ai-club-aachen.com"]
FRONTEND_URL=http://localhost:3000

# SMTP Configuration (netcup)
SMTP_HOST=mx2f17.netcup.net
SMTP_PORT=465
SMTP_USERNAME=your-netcup-email-username
SMTP_PASSWORD=your-netcup-email-password
SMTP_FROM_ADDRESS=noreply@your-domain.com
SMTP_FROM_NAME='Your App Name'
SMTP_USE_TLS=true

# Token expiry ranges (verification: 1-168 hours, reset: 5-1440 minutes)
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=60

# Application
API_V1_PREFIX=/api/v1
PROJECT_NAME='AI Game Competition Platform'
