				{
					"name": "Get Current User",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Check if token exists",
									"const token = pm.collectionVariables.get(\"access_token\");",
									"",
									"if (!token) {",
									"    console.error(\"No access token found. Please login first.\");",
									"    throw new Error(\"Authentication required. Run Login request first.\");",
									"}",
									"",
									"// Check token expiration",
									"const expiration = pm.collectionVariables.get(\"token_expiration\");",
									"const now = new Date().getTime();",
									"",
									"if (expiration && now > expiration) {",
									"    console.warn(\"Token expired. Please login again.\");",
									"    pm.collectionVariables.unset(\"access_token\");",
									"    throw new Error(\"Token expired. Please login again.\");",
									"}"
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
