						{
							"listen": "test",
							"script": {
								"exec": [
									"// Test response status",
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"// Parse response",
									"const response = pm.response.json();",
									"",
									"// Validate response structure",
									"pm.test(\"Response has access token\", function () {",
									"    pm.expect(response).to.have.property('access_token');",
									"    pm.expect(response).to.have.property('token_type');",
									"    pm.expect(response.token_type).to.eql('bearer');",
									"});",
									"",
									"// Store JWT token",
									"if (response.access_token) {",
									"    pm.collectionVariables.set(\"access_token\", response.access_token);",
									"    console.log(\"JWT token saved to collection variables\");",
									"}",
									"",
									"// Calculate token expiration (24 hours from now)",
									"const expirationTime = new Date().getTime() + (24 * 60 * 60 * 1000);",
									"pm.collectionVariables.set(\"token_expiration\", expirationTime);",
									"",
									"console.log(\"Login successful. Token expires in 24 hours.\");"
								],
								"type": "text/javascript"
							}
						}
					],
